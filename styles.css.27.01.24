/* Hero Section Styles */
.hero-section {
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    height: 300px; /* Adjust height as needed */
    position: relative;
  }
  
/* Image Cards Section */
.image-cards {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50px;
    padding-top: 50px; /* Spacing between header and first card */
}

.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    width: 50%; /* Half the size */
}

.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.card img {
    width: 100%;
    height: auto;
}

/* Parallax Effect */
.parallax {
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

/* Adjust the size of the parallax backgrounds for smaller screens */
@media screen and (max-width: 768px) {
    .parallax {
        background-attachment: scroll;
    }
}


/* Adjust the size of the parallax backgrounds */
@media screen and (max-width: 768px) {
    .parallax {
        background-attachment: scroll;
    }
}

  /* Footer Styles */
  .page-footer {
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    height: 150px; /* Adjust height as needed */
    position: relative;
  }

.carousel {
    position: relative;
    max-width: 600px; /* Adjust as needed */
    margin: auto;
    overflow: hidden;
  }
  
  .carousel__images img {
    width: 100%;
    display: none; /* Hide images initially */
  }
  
  .carousel__images img:first-child {
    display: block; /* Show the first image */
  }
  
  .carousel__button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%) scale(10); /* Scale up the buttons */
    opacity: 0; /* Make buttons invisible */
    width: 100px; /* Increase the width */
    height: 100px; /* Increase the height */
    background-color: transparent; /* Make the background transparent */
    border: none;
    cursor: pointer;
    z-index: 2; /* Ensure the buttons are above the images */
  }
  
  .carousel__button--left {
    left: 0;
    border-right: 50px solid transparent; /* Invisible hit area */
  }
  
  .carousel__button--right {
    right: 0;
    border-left: 50px solid transparent; /* Invisible hit area */
  }
  

section {
    padding: 20px;
    border-bottom: 1px solid #ddd;
    background-color: #EBFCF6; /* Light green for sections */
}

footer {
    background-color: #FE5751; /* Bright red */
    color: white;
    text-align: center;
    padding: 10px 0;
    position: fixed;
    bottom: 0;
    width: 100%;
}
