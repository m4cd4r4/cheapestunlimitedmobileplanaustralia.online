body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
    background-color: #EBFCF6; /* Light green background */
}

header {
    background-color: #FFAA98; /* Peach color */
    color: white;
    text-align: center;
    padding: 10px 0;
}

nav ul {
    list-style: none;
    padding: 0;
    text-align: center;
    background-color: #FFAA98; /* Light coral */
}

nav ul li {
    display: inline;
    margin-right: 20px;
}

nav ul li a {
    text-decoration: none;
    color: #333;
}

/* Base styles */
.container {
    max-width: 1200px;
    margin: auto;
    padding: 0 15px; /* Add some padding on the sides */
  }
  
  .hero-section,
  .page-footer {
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
  }
  
  .hero-section {
    height: 300px; /* Adjust height as needed */
  }
  
  .carousel {
    position: relative;
    max-width: 600px; /* Adjust as needed */
    margin: auto;
    overflow: hidden;
}

.carousel__images img {
    width: 25%; /* Half the size */
    display: none; /* Hide images initially */
}

.carousel__images img:first-child {
    display: block; /* Show the first image */
}

.carousel__button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: black; /* Black background for arrows */
    color: white; /* White arrow icons */
    border: none;
    cursor: pointer;
    z-index: 5; /* Ensure buttons are above images */
    font-size: 24px; /* Larger arrow icons */
    padding: 10px; /* Space around the arrow */
    opacity: 0.6; /* Semi-transparent */
}

.carousel__button:hover {
    opacity: 1; /* Full opacity on hover */
}

.carousel__button--left {
    left: 10px;
}

.carousel__button--right {
    right: 10px;
}


  .page-footer {
    height: 150px; /* Adjust height as needed */
  }
  
